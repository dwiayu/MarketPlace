<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayarDetailSewa">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvIdTempat"
            android:visibility="invisible"
            android:hint="id_tempat"
            />

        <TextView
            android:id="@+id/tvNamaUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvIdTempat"
            android:hint="Nama User :"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvAlamatUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvIdTempat"
            android:layout_centerHorizontal="true"
            android:hint="Alamat" />

        <TextView
            android:id="@+id/tvTglTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvHg"
            android:layout_marginEnd="13dp"

            android:hint="Tanggal Transaksi"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/tvNamaKostum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35dp"
            android:hint="Nama Kostum" />

        <TextView
            android:id="@+id/tvJmlh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:hint="Jumlah Kostum" />

        <TextView
            android:id="@+id/tvHg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvStatus_log"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="-133dp"
            android:hint="Harga Kostum" />

        <TextView
            android:id="@+id/tvStatus_log"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="133dp"
            android:hint="Status" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>