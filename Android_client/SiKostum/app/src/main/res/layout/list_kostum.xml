<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tvIdTempat"
    android:visibility="invisible"
    android:hint="Id tempat"
    />
    <TextView
        android:id="@+id/tvIdKostum"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tRnamaKostum"
        android:layout_alignParentStart="true"
        android:hint="ID kostum"
        />

    <TextView
        android:id="@+id/tvIdKategori"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tRHargaKostum"
        android:layout_alignParentStart="true"
        android:hint="Id Kategori" />
    <TextView
        android:id="@+id/tRnamaTempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:hint="Nama Tempat" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rFoto_kostum"
        android:layout_width="96dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tRnamaTempat"
        android:layout_marginEnd="41dp"
        android:src="@drawable/ic_account_circle_black_24dp"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp" />


    <TextView
        android:id="@+id/tRnamaKostum"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="57dp"
        android:layout_toEndOf="@+id/tRnamaTempat"
        android:hint="Nama Kostum" />

    <TextView
        android:id="@+id/tvRJumlah"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="133dp"
        android:layout_toEndOf="@+id/tRnamaTempat"
        android:hint="Jumlah Kostum" />

    <TextView
        android:id="@+id/tRHargaKostum"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="97dp"
        android:layout_toEndOf="@+id/tRnamaTempat"
        android:hint="Harga Kostum" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tRDeskripsi"
        android:hint="Deskripsi"/>

    <Button
        android:id="@+id/bRHapus"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/rFoto_kostum"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-13dp"
        android:layout_marginEnd="7dp"
        android:text="Hapus"
        android:textSize="8sp" />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>