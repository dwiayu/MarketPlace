<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewKeranjang">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id keranjang :"
        android:visibility="gone"
        android:textAlignment="center"
                />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kjId"
        android:visibility="gone"
        android:textAlignment="center"
        android:hint="ID Keranjang adalah..."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id user :"
        android:visibility="gone"

        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/id_user"
        android:visibility="gone"

        android:hint="id_user adalah...."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id kostum :"
        android:visibility="gone"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:visibility="gone"
        android:id="@+id/idKostum"
        android:hint="id kostum ..."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id tempat :"
        android:visibility="gone"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_tempat"
        android:visibility="gone"
        android:textAlignment="center"
        android:hint="id tempat adalah ..."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id alamat :"
        android:visibility="gone"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_alamat"
        android:visibility="gone"
        android:textAlignment="center"
        android:hint="id_alamat adalah ..."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nama kostum :"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namaKostum"
        android:textAlignment="center"
        android:hint="nama kostum adalah ..."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nama tempat :"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/namaTempat"
        android:hint="nama tempat adalah..."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="alamat :"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/alamat"
        android:hint="alamat tempat sewa adalah..."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah stock :"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jumlahKostum"
        android:textAlignment="center"
        android:hint="jumlah kostum yang tersedia adalah..."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="harga :"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/hargaKostum"
        android:hint="harga kostum adalah ..."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jumlah pesanan :"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/jml"
        android:hint="jumlah pesanan adalah..."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="total bayar :"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/totalBayar"
        android:hint="total bayar.."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:id="@+id/btKembali"/>
    </LinearLayout>

</LinearLayout>