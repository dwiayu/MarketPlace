<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayarIdentitasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gbrId"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="297dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tvIdentitas"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:hint="Id Identitas" />
        <TextView
            android:id="@+id/statusId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:hint="status" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="350dp"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/btUpId"
            android:layout_width="150dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="#29DB1C"
            android:text="Edit" />


        <Button
            android:id="@+id/btInsId"
            android:layout_width="150dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="#03A9F4"
            android:layout_alignTop="@+id/btUpId"
            android:text="Tambah" />

    </LinearLayout>



</RelativeLayout>